from django.db import models


class Industry(models.Model):
    name = models.CharField(max_length=100, unique=True)

    def __str__(self):
        return self.name


class Location(models.Model):
    country = models.CharField(max_length=100, unique=True)

    def __str__(self):
        return self.country


class Startup(models.Model):
    company_name = models.CharField(max_length=255)
    description = models.TextField()

    # Связь с Location как ForeignKey
    location = models.ForeignKey(Location, on_delete=models.SET_NULL, null=True, related_name='startups')

    industries = models.ManyToManyField(Industry, related_name='startups')
    funding_stage = models.CharField(max_length=50)

    # Optional logo for branding
    logo = models.ImageField(upload_to='startups/logos/', null=True, blank=True)

    # Website for external reference
    website = models.URLField(null=True, blank=True)

    # Indicates whether the startup is currently active
    is_active = models.BooleanField(default=True)

    # Description of investment needs (can be replaced with a structured field if needed)
    investment_needs = models.TextField(null=True, blank=True)

    # Company size (e.g., "1-10 employees", "50-100 employees")
    company_size = models.CharField(max_length=100, null=True, blank=True)

    # Timestamps for tracking creation and updates
    created_at = models.DateTimeField(auto_now_add=True)
    updated_at = models.DateTimeField(auto_now=True)

    def __str__(self):
        return self.company_name
